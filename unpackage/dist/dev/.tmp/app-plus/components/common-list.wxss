.commom-list {
	border-bottom: 1px solid #eee;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.commom-list-l {
	-webkit-flex-shrink: none;
	    -ms-flex-negative: none;
	        flex-shrink: none;
	margin-right: 15rpx;
}
.commom-list-l image {
	width: 90rpx;
	height: 90rpx;
	border-radius: 100%;
	-webkit-flex-shrink: 0;
	    -ms-flex-negative: 0;
	        flex-shrink: 0;
}
.commom-list-r {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	-webkit-flex-shrink: 0;
	    -ms-flex-negative: 0;
	        flex-shrink: 0;
}
.commom-list-r>view:nth-of-type(1)>view:first-child {
	color: #999999;
	font-size: 30rpx;
}
.commom-list-r>view:nth-of-type(1)>view:first-child>view:first-child {
	margin-right: 10rpx;
}
.commom-list-r>view:nth-of-type(1)>view:last-child {
	background: #EEEEEE;
	font-size: 26rpx;
	line-height: 26px;
		-webkit-box-sizing: border-box;
		        box-sizing: border-box;
	padding: 0rpx 5rpx;
	border-radius: 10rpx;
}
.commom-list-r>view:nth-of-type(2) {
	font-size: 32rpx;
	padding: 15rpx 0;
		-webkit-box-sizing: border-box;
		        box-sizing: border-box;
}
.commom-list-r>view:nth-of-type(3) {
	position: relative;
	width: 100%;
}
.commom-list-play,
.commom-list-playinfo {
	position: absolute;
}
.commom-list-r>view:nth-of-type(3)>image {
	width: 100%;
	border-radius: 10rpx;
}
.commom-list-play {
	font-size: 130rpx;
	color: #fff;
}
.commom-list-playinfo {
	position: absolute;
	bottom: 13rpx;
	right: 10rpx;
	padding: 3rpx 10rpx;
		-webkit-box-sizing: border-box;
		        box-sizing: border-box;
	border-radius: 5rpx;
	background: rgba(0, 0, 0, 0.75);
	color: #fff;
}
.commom-list-r>view:nth-of-type(4)>view {
	color: #BBBBBB;
}
.commom-list-r>view:nth-of-type(4)>view:nth-of-type(2)>view {
	margin-left: 10rpx;
	padding-left: 5rpx;
}
.commom-list-share {
	background: #EEEEEE;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	width: 100%;
		box-sizing: border-box;
	/* flex: 1; */
	border-radius: 20rpx;
}
.commom-list-share image {
	-webkit-flex-shrink: none;
	    -ms-flex-negative: none;
	        flex-shrink: none;
	width: 200rpx;
	height: 150rpx;
	border-radius: 5rpx;
	margin-right: 18rpx;
}
.commom-list-share view {
	-webkit-flex-shrink: none;
	    -ms-flex-negative: none;
	        flex-shrink: none;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}

